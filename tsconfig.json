{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "lib": ["dom", "esnext"],
    "declaration": true,
    "declarationMap": true,
    "noEmit": true,
    "jsx": "react",
    "strict": true,
    "pretty": true,
    "sourceMap": true,
    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "@app/*": ["./app/*"],
      "@apis/*": ["./app/apis/*"],
      "@assets/*": ["./app/assets/*"],
      "@components/*": ["./app/components/*"],
      "@configs/*": ["./app/configs/*"],
      "@constants/*": ["./app/constants/*"],
      "@modules/*": ["./app/modules/*"],
      "@store/*": ["./app/store/*"],
      "@reducers/*": ["./app/store/reducers/*"],
      "@actions/*": ["./app/store/actions/*"],
      "@utils/*": ["./app/utils/*"],

      "@apis": ["./app/apis/index"],
      "@assets": ["./app/assets/index"],
      "@components": ["./app/components/index"],
      "@configs": ["./app/configs/index"],
      "@constants": ["./app/constants/index"],
      "@store": ["./app/store/index"],
      "@reducers": ["./app/store/reducers/index"],
    }
  },
  "exclude": [
    "test",
    "release",
    "app/main.prod.js",
    "app/main.prod.js.map",
    "app/renderer.prod.js",
    "app/renderer.prod.js.map",
    "app/style.css",
    "app/style.css.map",
    "app/dist",
    "dll",
    "app/main.js",
    "app/main.js.map",
  ]
}
